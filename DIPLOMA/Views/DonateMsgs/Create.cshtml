@model DIPLOMA.Models.DonateMsg

@{
    Layout = null;
    int iconWidth = 34;
}
<!DOCTYPE html>

<html>
<head>

    <meta name="viewport" content="width=device-width" />
    <title>@Model.User.NickName</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <base href="~/" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body style="        background-image: url( @Model.User.UserProfile.BackgroundImgSrc );
        background-size: cover;
        height: 100%;
        min-height: 100%;
        margin-bottom: -50px;
 ">
    <div class="container" style="max-width:;">
        <main role="main" class="m-5 p-3 " style="height: 90%; min-height: 80%;  ">
            <div class="row m-5 mr-5 p-3" style="        margin-bottom: 0px!important;
        margin-top: 0px!important">
                <div class="col d-flex align-items-center">
                    <img src="@Model.User.UserProfile.ProfilePicImgSrc" width="150" style="border-radius:5px" />
                    <h2 style="padding-left:10px">@Model.User.NickName</h2>

                </div>
                <div class="col">
                </div>
                <div class="col">
                    @if (string.IsNullOrEmpty(Model.User.UserProfile.Youtube) == false)
                    {
                        <a href="@Model.User.UserProfile.Youtube"><img src="~/imgs/youtube_icin_square.png" width="@iconWidth" style="padding:2px" /></a>
                    }
                    @if (string.IsNullOrEmpty(Model.User.UserProfile.Twitch) == false)
                    {
                        <a href="@Model.User.UserProfile.Twitch"><img src="~/imgs/twitch_tile_logo_icon.png" width="@iconWidth" style="padding:2px" /></a>
                    }
                    @if (string.IsNullOrEmpty(Model.User.UserProfile.Facebook) == false)
                    {
                        <a href="@Model.User.UserProfile.Facebook"><img src="~/imgs/facebook_icon_2.png" width="@iconWidth" style="padding:2px" /></a>
                    }
                    @if (string.IsNullOrEmpty(Model.User.UserProfile.Instagram) == false)
                    {
                        <a href="@Model.User.UserProfile.Instagram"><img src="~/imgs/inst_icon_square.png" width="@iconWidth" style="padding:2px" /></a>
                    }
                    @if (string.IsNullOrEmpty(Model.User.UserProfile.Twitter) == false)
                    {
                        <a href="@Model.User.UserProfile.Twitter"> <img src="~/imgs/twitter_icon.png" width="@iconWidth" style="padding:2px" /></a>
                    }
                    @if (string.IsNullOrEmpty(Model.User.UserProfile.Telegram) == false)
                    {
                        <a href="@Model.User.UserProfile.Telegram"><img src="~/imgs/telegram_icon_square.png" width="@iconWidth" style="padding:2px" /></a>
                    }
                    @if (string.IsNullOrEmpty(Model.User.UserProfile.Youtube) == false)
                    {

                        <a href="@Model.User.UserProfile.Discord"><img src="~/imgs/discord_icon.png" width="@iconWidth" style="padding:2px" /></a>
                    }


                </div>
            </div>
            <div class="m-5 p-3"
                 style="        background-color: cornflowerblue;
        height: 100%;
        border-radius: 10px;
        margin-top: 10px !important">
                <form asp-controller="DonateMsgs" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="DonatorName" class="control-label"></label>
                        <input asp-for="DonatorName" class="form-control" />
                        <span asp-validation-for="DonatorName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Amount" class="control-label"></label>
                        <input asp-for="Amount" class="form-control" type="number" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Message" class="control-label"></label>
                        <input asp-for="Message" class="form-control" />
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="display:none">
                        <input asp-for="UserID" class="form-control" hidden />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Donate" class="btn btn-primary" />
                    </div>
                </form>

            </div>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="_framework/blazor.server.js"></script>

</body>
</html>

